<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss} %-5level %logger{36} - %m%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.bs.firstboot" level="debug"/>
	
	<root level="info">
		<appender-ref ref="STDOUT"/>
	</root>
	
</configuration>